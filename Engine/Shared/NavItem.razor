@{ if (Has_submenu)
    {
        <li class="nav-item has-submenu">
            <NavLink class="nav-link submenu-toggle" href="@Nav_link" data-toggle="collapse" data-target="@($"#submenu-{Submenu_number}")" aria-expanded="false" aria-controls="@($"submenu-{Submenu_number}")">
                <span class="nav-icon">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-columns-gap" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M6 1H1v3h5V1zM1 0a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h5a1 1 0 0 0 1-1V1a1 1 0 0 0-1-1H1zm14 12h-5v3h5v-3zm-5-1a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h5a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1h-5zM6 8H1v7h5V8zM1 7a1 1 0 0 0-1 1v7a1 1 0 0 0 1 1h5a1 1 0 0 0 1-1V8a1 1 0 0 0-1-1H1zm14-6h-5v7h5V1zm-5-1a1 1 0 0 0-1 1v7a1 1 0 0 0 1 1h5a1 1 0 0 0 1-1V1a1 1 0 0 0-1-1h-5z" />
                    </svg>
                </span>
                <span class="nav-link-text">@Nav_link_text</span>
                <span class="submenu-arrow">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chevron-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
                    </svg>
                </span><!--//submenu-arrow-->
            </NavLink><!--//nav-link-->

            <div id="@($"submenu-{Submenu_number}")" class="collapse submenu @($"submenu-{Submenu_number}")" data-parent="#menu-accordion">
                <ul class="submenu-list list-unstyled">
                    <li class="submenu-item"><NavLink class="submenu-link" href="signup.html">Signup</NavLink></li>
                    <li class="submenu-item"><NavLink class="submenu-link" href="reset-password.html">Reset password</NavLink></li>
                    <li class="submenu-item"><NavLink class="submenu-link" href="404.html">404 page</NavLink></li>
                </ul>
            </div>
        </li><!--//nav-item-->
    }
    else
    {
        <li class="nav-item">
            <NavLink class="nav-link active" href="@Nav_link">
                <span class="nav-icon">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-house-door" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M7.646 1.146a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 .146.354v7a.5.5 0 0 1-.5.5H9.5a.5.5 0 0 1-.5-.5v-4H7v4a.5.5 0 0 1-.5.5H2a.5.5 0 0 1-.5-.5v-7a.5.5 0 0 1 .146-.354l6-6zM2.5 7.707V14H6v-4a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 .5.5v4h3.5V7.707L8 2.207l-5.5 5.5z" />
                        <path fill-rule="evenodd" d="M13 2.5V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                    </svg>
                </span>
                <span class="nav-link-text">@Nav_link_text</span>
            </NavLink><!--//nav-link-->
        </li><!--//nav-item-->
    }
}

@code {
    [Parameter]
    public bool Has_submenu { get; set; } = false;
    [Parameter]
    public string Nav_link_text { get; set; }
    [Parameter]
    public string Nav_link { get; set; } = "#";
    [Parameter]
    public int Submenu_number { get; set; }
    /*Параметром также должно быть передаваемое изображение svg*/
}
