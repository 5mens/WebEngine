@page "/articles"
<div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl">
        <div class="row g-3 mb-4 align-items-center justify-content-between">
            <_PageTitle MainTitle="@mainTitle" />
            <_SearchBar />
        </div><!--//row-->
        <_TableTemplate Items="articles" Context="article">
            <TableHeader>
                <th><input class="form-check-input" type="checkbox" value="" id="settings-checkbox-3"></th>
                <th>Id</th>
                <th>Наименование</th>
                <th>Текст</th>
                <th>Автор</th>
                <th>Дата</th>
            </TableHeader>
            <RowTemplate>
                <td><input class="form-check-input" type="checkbox" value="" id="settings-checkbox-3"></td>
                <td>@article.Id</td>
                <td>@article.Title</td>
                <td>@article.Text</td>
                <td>@article.Author</td>
                <td>@article.Created.ToLongDateString()</td>
            </RowTemplate>
        </_TableTemplate>
    </div>
</div>

@code {
    private string mainTitle = "Менеджер материалов";
    private List<Article> articles = new List<Article>()
    {
        new Article {
            Id = 1,
            Title = "Статья 1",
            Text = "пыщь пыщь ололо",
