@page "/administrator/article/category"
@inject IDbContextFactory<AppDbContext> DbFactory
@inject NavigationManager Nav

<MudPaper Class="ma-2" Elevation="0">
    <MudText Typo="Typo.h5" Class="pt-3">Список материалов</MudText>
    <MudDivider DividerType="DividerType.Middle" />
</MudPaper>
<MudPaper Class="ma-2" Elevation="0">
    <MudButton Class="ma-1 mt-2" OnClick="()=>AddCategory()" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" Size="Size.Medium">Создать</MudButton>
    <MudButton Class="ma-1 mt-2" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Edit" Size="Size.Medium">Изменить</MudButton>
    <MudButton Class="ma-1 mt-2" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Medium">Удалить</MudButton>
</MudPaper>
<MudTable Class="table app-table-hover mb-0 text-left" Items="@Elements" Hover="@hover" SortLabel="Сортировка по:" MultiSelection="true" Dense="@dense" @bind-SelectedItems="selectedItems" Filter="new Func<Category,bool>(FilterFunc)">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Список материалов</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Поиск" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel InitialDirection="SortDirection.Ascending" SortBy="new Func<Category, object>(x=>x.Id)">Id</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel Enabled="@enabled" SortBy="new Func<Category, object>(x=>x.Name)">Наименование</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<Category, object>(x=>x.Description)">Описание</MudTableSortLabel></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Title">@context.Name</MudTd>
        <MudTd DataLabel="Text">@context.Description</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager Class="" PageSizeOptions="new int[]{20, 50, 100}" RowsPerPageString="Выводить по:" InfoFormat="{first_item}-{last_item} из {all_items}" />
    </PagerContent>
</MudTable>
<MudText Inline="true">Выбранные значения: @(selectedItems==null ? "" : string.Join(", ", selectedItems.OrderBy(x=>x.Name).Select(x=>x.Name)))</MudText>
