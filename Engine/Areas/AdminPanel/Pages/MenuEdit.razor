@page "/administrator/menu/{MenuId:int}/edit"

<MudPaper Class="pa-4 ma-2" Elevation="0">
    <MudButton Class="ma-1 mt-2" OnClick="()=>UpdateMenu()" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Save" Color="Color.Success" Size="Size.Medium">Сохранить</MudButton>
    <MudButton Class="ma-1 mt-2" OnClick="()=>Cancel()" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Medium">Отмена</MudButton>
</MudPaper>
<MudTextField Class="pa-4 ma-2" Label="id" @bind-Value="EditedItem.Id" Disabled="true" />
<MudTextField Class="pa-4 ma-2" Label="Наименование" @bind-Value="EditedItem.Title" />
<MudTextField Class="pa-4 ma-2" Label="Описание" @bind-Value="EditedItem.Desc" />
<MudTextField Class="pa-4 ma-2" Label="Позиция" @bind-Value="EditedItem.Menutype" />

<MudItem Class="pa-4 ma-2" Elevation="0">
    <MudTextField T="string" Label="Примечание" Variant="Variant.Outlined" Text="@sampleText" Lines="3" Disabled="true" />
</MudItem>

@code
{
    string sampleText = "Место для текста, запроса или полезной информации! Выпилить при необходимости.";
}