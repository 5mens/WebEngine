@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<h2 class="auth-heading text-center mb-5">Войти</h2>
<div class="auth-form-container text-left">
    <form id="account" method="post" class="auth-form login-form">
        <div class="email mb-3">
            <!--<div class="form-group">
                <label asp-for="Input.Email" class="sr-only" for="signin-email"></label>
                <input asp-for="Input.Email" id="signin-email" name="signin-email" type="email" class="form-control signin-email" placeholder="Email" required="required">
            </div>-->
            <div class="form-group">
                <label asp-for="Input.Email" class="sr-only"></label>
                <input asp-for="Input.Email" class="form-control signin-email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div><!--//form-group-->
        <div class="password mb-3">
            <div class="form-group">
                <label asp-for="Input.Password" class="sr-only"></label>
                <input asp-for="Input.Password" class="form-control signin-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="extra mt-3 row justify-content-between">
                <div class="col-6">
                    <div class="form-check">                        
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    <input asp-for="Input.RememberMe" class="form-check-input"/>
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                </div><!--//col-6-->
                <div class="col-6">
                    <div class="forgot-password text-right">
                        <a asp-page="./ForgotPassword">Забыли пароль?</a>
                    </div>
                </div><!--//col-6-->
            </div><!--//extra-->
        </div><!--//form-group-->
        <div class="form-group">
            <button type="submit" class="btn app-btn-primary btn-block theme-btn mx-auto">Вход</button>
        </div>
    </form>
    <div class="auth-option text-center pt-5"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-link">Регистрация</a></div>
</div><!--//auth-form-container-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
