<MudPaper Class="ma-6" Elevation="0">
    <MudText Typo="Typo.h6">Добавить ингредиент на склад</MudText>
    <MudDivider DividerType="DividerType.FullWidth" />
    <MudPaper Class="pt-5 pb-5" Elevation="0">
        <MudButton OnClick="@AddIngredientClick" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Save" Color="Color.Success" Size="Size.Small">Сохранить</MudButton>
        <MudButton Class="mx-2" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small">Отмена</MudButton>
    </MudPaper>
    <MudGrid>
        <MudItem xs="12">
            <MudTextField Label="Наименование" @bind-Value="NewIngredient.UserName" />
        </MudItem>
        <MudItem xs="4">
            <MudNumericField T="decimal?" @bind-Value="NewIngredient.Weight" Immediate Label="Вес/объем" ErrorText="Некорректное число" Format="F0" />
        </MudItem>
        <MudItem xs="3">
            <MudSelect OffsetY="true" T="string" Label="Единица измерения" @bind-Value="NewIngredient.UserUnit">
                @foreach (string item in _selectorValue)
                {
                    <MudSelectItem Value="@item">@item</MudSelectItem>
                }
            </MudSelect>
        </MudItem>
        <MudItem xs="5">
            <MudNumericField T="double?" @bind-Value="NewIngredient.Price" Immediate Label="Цена за единицу" ErrorText="Некорректное число" Format="F2" />
        </MudItem>
        <MudItem xs="6">
            <MudAutocomplete T="Ingredient" Label="Категория ингредиента" @bind-Value="value" HelperText="Начните вводить текст" SearchFunc="@Search"
                             ResetValueOnEmptyText="@resetValueOnEmptyText" ToStringFunc="@(e=> e==null?null : $"{e.Name}")"
                             CoerceText="@coerceText" CoerceValue="@coerceValue" MaxItems="100"
                             AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Primary" />
        </MudItem>
    </MudGrid>
</MudPaper>
