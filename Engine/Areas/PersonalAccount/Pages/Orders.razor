@page "/orders"
<AuthorizeView Roles="user">
    <MudPaper Elevation="0">
        <MudText Class="ma-6" Typo="Typo.h5">Заказы</MudText>
        <MudDivider DividerType="DividerType.FullWidth" />
        <MudTabs Elevation="0" Rounded="true" Centered="true">
            <MudTabPanel Text="В работе" BadgeData='"1"' BadgeColor="Color.Info">
                <MudToolBar>
                    <MudIconButton Icon="@Icons.Material.Outlined.Add" Color="Color.Success" Title="Добавить" />
                    <MudIconButton Icon="@Icons.Material.Outlined.Edit" Color="Color.Transparent" Title="Изменить" />
                    <MudIconButton Icon="@Icons.Material.Outlined.Delete" Color="Color.Error" Title="Удалить" />
                </MudToolBar>
                <Order />
            </MudTabPanel>
            <MudTabPanel Text="Завершенные" BadgeData='"1"'>
                <MudToolBar>
                    <MudIconButton Icon="@Icons.Material.Outlined.Add" Color="Color.Success" Title="Добавить" />
                    <MudIconButton Icon="@Icons.Material.Outlined.Edit" Color="Color.Transparent" Title="Изменить" />
                    <MudIconButton Icon="@Icons.Material.Outlined.Delete" Color="Color.Error" Title="Удалить" />
                </MudToolBar>
                <Order />
            </MudTabPanel>
            <MudTabPanel Text="Отмененные" BadgeData='"1"' BadgeColor="Color.Error">
                <MudToolBar>
                    <MudIconButton Icon="@Icons.Material.Outlined.Add" Color="Color.Success" Title="Добавить" />
                    <MudIconButton Icon="@Icons.Material.Outlined.Edit" Color="Color.Transparent" Title="Изменить" />
                    <MudIconButton Icon="@Icons.Material.Outlined.Delete" Color="Color.Error" Title="Удалить" />
                </MudToolBar>
                <Order />
            </MudTabPanel>
        </MudTabs>
    </MudPaper>
</AuthorizeView>
